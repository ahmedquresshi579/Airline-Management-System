<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="827.0" prefWidth="1040.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicketsAndFlightsController">
    <left>
        <VBox prefWidth="220" style="-fx-background-color: #2d2f4a; -fx-padding: 20;">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 10 0;">
                <StackPane style="-fx-background-color: #6a4df4; -fx-background-radius: 16; -fx-padding: 16;">
                    <VBox alignment="CENTER" spacing="6">
                        <Label style="-fx-font-size: 32px; -fx-text-fill: white;" text="💻" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="SkyTrack" />
                    </VBox>
                </StackPane>
            </VBox>
            <VBox spacing="8" style="-fx-padding: 0 0 0 0;">
                <Button onAction="#showHome" style="-fx-background-color: #fff;" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="299.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #2d2f4a;" text="🏠" />
                            <Label style="-fx-text-fill: #2d2f4a; -fx-font-size: 14px; -fx-font-weight: bold;" text="Home" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showAddFlight" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="294.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="✈+" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Add Flight" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showEditFlight" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="306.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="📝" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Edit Flight" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showViewPassengers" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="270.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="👤" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Passengers" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showAssignCrew" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="274.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="🧑‍✈️" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Add and Assign Crew" />
                        </VBox>
                    </graphic>
                </Button>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" style="-fx-padding: 30 0 0 0;" />
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color:transparent;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f7f8fa; -fx-padding: 30;">
                <HBox alignment="CENTER" spacing="30">
                    <Label minWidth="80" style="-fx-font-weight: bold;" text="Flight ID:" />
                    <ComboBox fx:id="flightIdCombo" prefWidth="150" promptText="Select Flight ID" styleClass="combo-box" />
                    <Label minWidth="110" style="-fx-font-weight: bold;" text="Passenger ID:" />
                    <ComboBox fx:id="passengerIdCombo" prefWidth="150" promptText="Select Passenger ID" styleClass="combo-box" />
                </HBox>
                <HBox alignment="CENTER" spacing="30">
                    <Label minWidth="80" style="-fx-font-weight: bold;" text="Status:" />
                    <ComboBox fx:id="statusCombo" prefWidth="150" promptText="Select Status" styleClass="combo-box" />
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button fx:id="searchButton" onAction="#handleSearch" styleClass="primary-btn" text="Search" />
                    <Button fx:id="clearButton" onAction="#handleClear" styleClass="secondary-btn" text="Clear" />
                </HBox>
                <TableView fx:id="flightsTable" prefHeight="250" VBox.vgrow="NEVER">
                    <columns>
                        <TableColumn fx:id="flightIdColumn" prefWidth="100" text="Flight ID" />
                        <TableColumn fx:id="departureColumn" prefWidth="120" text="Departure" />
                        <TableColumn fx:id="arrivalColumn" prefWidth="120" text="Arrival" />
                        <TableColumn fx:id="aircraftColumn" prefWidth="120" text="Aircraft" />
                        <TableColumn fx:id="ticketQuantityColumn" prefWidth="120" text="Ticket Quantity" />
                        <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                        <TableColumn fx:id="dateColumn" prefWidth="120" text="Date" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #fff; -fx-padding: 10 30 10 0;">
            <TextField fx:id="searchField" promptText="Search..." style="-fx-pref-width: 220; -fx-background-radius: 16; -fx-border-radius: 16; -fx-border-color: #e6eaff; -fx-background-color: #f7f8fa;" />
            <Button fx:id="settingsButton" style="-fx-background-color: transparent; -fx-font-size: 22px; -fx-text-fill: #6a4df4;" text="⚙️">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="signOutButton" onAction="#handleSignOut" prefHeight="38.0" prefWidth="92.0" style="-fx-background-color: #ff4d4f; -fx-text-fill: #fff; -fx-font-size: 14px; -fx-background-radius: 16; -fx-padding: 0 16 0 16;" text="Sign Out">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
        </HBox>
    </top>
</BorderPane>
