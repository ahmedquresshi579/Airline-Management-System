<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddCrewController">
    <left>
        <VBox prefWidth="220" style="-fx-background-color: #2d2f4a; -fx-padding: 20;">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 10 0;">
                <StackPane style="-fx-background-color: #6a4df4; -fx-background-radius: 16; -fx-padding: 16;">
                    <VBox alignment="CENTER" spacing="6">
                        <Label style="-fx-font-size: 32px; -fx-text-fill: white;" text="💻" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="SkyTrack" />
                    </VBox>
                </StackPane>
            </VBox>
            <VBox spacing="8" style="-fx-padding: 0 0 0 0;">
                <Button onAction="#showHome" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="299.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="🏠" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Home" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showAddFlight" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="294.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="✈+" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Add Flight" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showEditFlight" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="306.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="📝" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Edit Flight" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showViewPassengers" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="270.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #fff;" text="👤" />
                            <Label style="-fx-text-fill: #fff; -fx-font-size: 14px;" text="Passengers" />
                        </VBox>
                    </graphic>
                </Button>
                <Button onAction="#showAddCrew" style="-fx-background-color: #fff;" styleClass="sidebar-btn">
                    <graphic>
                        <VBox alignment="CENTER" prefHeight="54.0" prefWidth="274.0" spacing="2">
                            <Label style="-fx-font-size: 22px; -fx-text-fill: #2d2f4a;" text="🧑‍✈️" />
                            <Label style="-fx-text-fill: #2d2f4a; -fx-font-size: 14px; -fx-font-weight: bold;" text="Add and Assign Crew" />
                        </VBox>
                    </graphic>
                </Button>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" style="-fx-padding: 30 0 0 0;" />
        </VBox>
    </left>
    <center>
        <VBox prefHeight="608.0" prefWidth="715.0" style="-fx-background-color: #f7f8fa; -fx-padding: 30;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d2f4a;" text="Add New Crew Member" />
            </HBox>
            <VBox spacing="20" style="-fx-background-color: #fff; -fx-background-radius: 16; -fx-padding: 20;">
                <HBox spacing="20">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #2d2f4a; -fx-font-weight: bold;">Crew ID</Label>
                        <TextField fx:id="crewIdField" promptText="Enter Crew ID" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #2d2f4a; -fx-font-weight: bold;">First Name</Label>
                        <TextField fx:id="fnameField" promptText="Enter first name" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #2d2f4a; -fx-font-weight: bold;">Last Name</Label>
                        <TextField fx:id="lnameField" promptText="Enter last name" />
                    </VBox>
                </HBox>
                
                <HBox spacing="20">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #2d2f4a; -fx-font-weight: bold;">Designation</Label>
                        <ComboBox fx:id="designationComboBox" promptText="Select designation" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #2d2f4a; -fx-font-weight: bold;">Contact Number</Label>
                        <TextField fx:id="contactNoField" promptText="Enter contact number" />
                    </VBox>
                </HBox>
                
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 20 0 0 0;">
                    <Button onAction="#handleAddCrew" prefHeight="45.0" prefWidth="122.0" style="-fx-background-color: #6a4df4; -fx-text-fill: white; -fx-background-radius: 16;" text="Add Crew Member" />
                    <Button onAction="#showAssignCrew" prefHeight="45.0" prefWidth="108.0" style="-fx-background-color: #6a4df4; -fx-text-fill: white; -fx-background-radius: 16;" text="Assign Crew" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #fff; -fx-padding: 10 30 10 0;">
            <TextField fx:id="globalSearchField" promptText="Search..." style="-fx-pref-width: 220; -fx-background-radius: 16; -fx-border-radius: 16; -fx-border-color: #e6eaff; -fx-background-color: #f7f8fa;" />
            <Button fx:id="settingsButton" style="-fx-background-color: transparent; -fx-font-size: 18px; -fx-text-fill: #6a4df4;" text="⚙" />
        </HBox>
    </top>
</BorderPane>
